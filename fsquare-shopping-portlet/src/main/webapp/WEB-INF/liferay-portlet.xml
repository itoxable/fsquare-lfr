<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>cart</portlet-name>
		<icon>/cart-link/icon.png</icon>
		<struts-path>cart</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.cartlink.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>
<!-- 		<requires-namespaced-parameters>false</requires-namespaced-parameters> -->
		
		<header-portlet-css>/cart-link/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/cart-link/js/main.js</footer-portlet-javascript>
	</portlet>
	
	<portlet>
		<portlet-name>order</portlet-name>
		<icon>/order/icon.png</icon>
		<configuration-action-class>com.fsquare.shopping.portlet.order.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>
		<header-portlet-css>/order/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/order/js/main.js</footer-portlet-javascript>
	</portlet>
	
	
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>