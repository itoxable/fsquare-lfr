<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>mini-cart</portlet-name>
		<icon>/mini-cart/icon.png</icon>
		<struts-path>minicart</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.minicart.action.ConfigurationActionImpl</configuration-action-class>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>store</friendly-url-mapping>
		<friendly-url-routes>com/fsquare/shopping/portlet/minicart-friendly-url-routes.xml</friendly-url-routes>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/mini-cart/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/mini-cart/js/main.js</footer-portlet-javascript>
		<add-default-resource>true</add-default-resource>
	</portlet>
	
	<portlet>
		<portlet-name>shopping-order-checkout</portlet-name>
		<icon>/shopping-order-checkout/icon.png</icon>
		<configuration-action-class>com.fsquare.shopping.portlet.shoppingordercheckout.action.ConfigurationActionImpl</configuration-action-class>
		
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>check</friendly-url-mapping>
		<friendly-url-routes>com/fsquare/shopping/portlet/shopping-order-checkout-url-routes.xml</friendly-url-routes>
		
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>
		<header-portlet-css>/shopping-order-checkout/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/shopping-order-checkout/js/main.js</footer-portlet-javascript>
		
	</portlet>
	
	<portlet>
		<portlet-name>shopping-cart</portlet-name>
		<icon>/shopping-cart/icon.png</icon>
		<struts-path>cart</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.shoppingcart.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>		
		<header-portlet-css>/shopping-cart/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/shopping-cart/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>shopping-cart</css-class-wrapper>
		
	</portlet>
	
	<portlet>
		<portlet-name>shopping-store</portlet-name>
		<icon>/shopping-store/icon.png</icon>
		<struts-path>shoppingstore</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.shoppingstore.action.ConfigurationActionImpl</configuration-action-class>
		
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>shopping-store</friendly-url-mapping>
		<friendly-url-routes>com/fsquare/shopping/portlet/shopping-store-friendly-url-routes.xml</friendly-url-routes>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>		
		<header-portlet-css>/main.css</header-portlet-css> 
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>shopping-store-settings</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>shopping-coupon-management</portlet-name>
		<icon>/shopping-coupon-management/icon.png</icon>
		<struts-path>shopping-coupon-management</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.shoppingcouponmanagement.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>		
		<header-portlet-css>/css/main.css</header-portlet-css> 
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>shopping-store-settings shopping-coupon-management</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>shopping-shipping-management</portlet-name>
		<icon>/shopping-shipping-management/icon.png</icon>
		<struts-path>shopping-shipping-management</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.shoppingshippingmanagement.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>		
		<header-portlet-css>/css/main.css</header-portlet-css> 
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>shopping-store-settings shopping-shipping-management</css-class-wrapper>
	</portlet>

	<portlet>
		<portlet-name>shopping-orders-management</portlet-name>
		<icon>/shopping-orders-management/icon.png</icon>
		<struts-path>shopping-orders-management</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.shoppingordersmanagement.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>		
		<header-portlet-css>/css/main.css</header-portlet-css> 
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>shopping-store-settings shopping-orders-management</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>user-shopping-orders</portlet-name>
		<icon>/user-shopping-orders/icon.png</icon>
		<struts-path>user-shopping-orders</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.usershoppingorders.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>		
		<header-portlet-css>/user-shopping-orders/css/main.css</header-portlet-css> 
		<footer-portlet-javascript>/user-shopping-orders/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>user-shopping-orders</css-class-wrapper>
	</portlet>
	
	<portlet>
		<portlet-name>inventory-management</portlet-name>
		<icon>/inventory-management/icon.png</icon>
		<struts-path>inventory-management</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.inventorymanagement.action.ConfigurationActionImpl</configuration-action-class>
		<indexer-class>com.fsquare.shopping.portlet.util.ShoppingItemIndexer</indexer-class>
		<open-search-class>com.fsquare.shopping.portlet.util.ShoppingItemOpenSearchImpl</open-search-class>
		
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>inventorymanagement</friendly-url-mapping>
		<friendly-url-routes>com/fsquare/shopping/portlet/inventorymanagement-friendly-url-routes.xml</friendly-url-routes>
		<asset-renderer-factory>
			com.fsquare.shopping.asset.ShoppingItemAssetRendererFactory 
		</asset-renderer-factory>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/css/main.css</header-portlet-css>
		
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>shopping-store-settings  inventory-management</css-class-wrapper>
		
		<add-default-resource>true</add-default-resource>
		
	</portlet>
	
	
	<portlet>
		<portlet-name>portal-rest-services</portlet-name>
		<icon>/icon.png</icon>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
	</portlet>
	
	
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>