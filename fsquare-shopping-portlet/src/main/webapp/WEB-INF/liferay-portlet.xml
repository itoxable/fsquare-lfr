		<configuration-action-class>com.fsquare.shopping.portlet.cartview.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>		
		<header-portlet-css>/cart-view/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/cart-view/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>cart-view</css-class-wrapper>
		
	</portlet>
	
	<portlet>
