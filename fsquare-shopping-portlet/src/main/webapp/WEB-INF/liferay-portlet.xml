<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>minicart</portlet-name>
		<icon>/mini-cart/icon.png</icon>
		<struts-path>minicart</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.minicart.action.ConfigurationActionImpl</configuration-action-class>
		
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>minicart</friendly-url-mapping>
		<friendly-url-routes>com/fsquare/shopping/portlet/minicart-friendly-url-routes.xml</friendly-url-routes>
		
		
		
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		
		
		
		<header-portlet-css>/mini-cart/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/mini-cart/js/main.js</footer-portlet-javascript>
		
				<add-default-resource>true</add-default-resource>
		
	</portlet>
	
	<portlet>
		<portlet-name>shoppingorder</portlet-name>
		<icon>/shopping-order/icon.png</icon>
		<configuration-action-class>com.fsquare.shopping.portlet.shoppingorder.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>
		<header-portlet-css>/shopping-order/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/shopping-order/js/main.js</footer-portlet-javascript>
	</portlet>
	
	<portlet>
		<portlet-name>cartview</portlet-name>
		<icon>/cart-view/icon.png</icon>
		<struts-path>cart</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.cartview.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>		
		<header-portlet-css>/cart-view/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/cart-view/js/main.js</footer-portlet-javascript>
	</portlet>
	<portlet>
		<portlet-name>shoppingstore</portlet-name>
		<icon>/shopping-store/icon.png</icon>
		<struts-path>shoppingstore</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.shoppingstore.action.ConfigurationActionImpl</configuration-action-class>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>		
		<header-portlet-css>/shopping-store/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/shopping-store/js/main.js</footer-portlet-javascript>
	</portlet>


	
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>