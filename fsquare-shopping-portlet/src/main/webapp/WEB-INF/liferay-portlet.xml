<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>minicart</portlet-name>
		<icon>/mini-cart/icon.png</icon>
		<struts-path>minicart</struts-path>
		<configuration-action-class>com.fsquare.shopping.portlet.minicart.action.ConfigurationActionImpl</configuration-action-class>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>minicart</friendly-url-mapping>
		<friendly-url-routes>com/fsquare/shopping/portlet/minicart-friendly-url-routes.xml</friendly-url-routes>
		<preferences-company-wide>true</preferences-company-wide>
		<instanceable>false</instanceable>
		<requires-namespaced-parameters>false</requires-namespaced-parameters>
		<header-portlet-css>/mini-cart/css/main.css</header-portlet-css>
		<footer-portlet-javascript>/mini-cart/js/main.js</footer-portlet-javascript>
		<add-default-resource>true</add-default-resource>
	</portlet>
	
	<portlet>
		<portlet-name>shoppingorder</portlet-name>
