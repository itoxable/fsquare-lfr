<?xml version="1.0"?>
<!DOCTYPE routes PUBLIC "-//Liferay//DTD Friendly URL Routes 6.2.0//EN" "http://www.liferay.com/dtd/liferay-friendly-url-routes_6_2_0.dtd">

<routes>
	<route>
		<pattern>/add-to-cart/{assetId}</pattern>
		<implicit-parameter name="p_p_lifecycle">1</implicit-parameter>
		<implicit-parameter name="p_p_auth">0</implicit-parameter>
		<implicit-parameter name="cmd">addToCart</implicit-parameter>
	</route>
	
	
	<route>
		<pattern>/stripe-webhook/{data}</pattern>
		<implicit-parameter name="p_p_lifecycle">2</implicit-parameter>
		<implicit-parameter name="p_p_auth">0</implicit-parameter>
		<implicit-parameter name="p_p_state">maximized</implicit-parameter>
		<implicit-parameter name="cmd">stripeWebhook</implicit-parameter>
	</route>
	<route>
		<pattern>/braintree-webhook/{data}</pattern>
		<implicit-parameter name="p_p_lifecycle">2</implicit-parameter>
		<implicit-parameter name="p_p_auth">0</implicit-parameter>
		<implicit-parameter name="p_p_state">maximized</implicit-parameter>
		<implicit-parameter name="cmd">braintreeWebhook</implicit-parameter>
	</route>
	
</routes>
